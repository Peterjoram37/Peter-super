{
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/${input:programPath}",
        "preLaunchTask": "install-dependencies",
        "envFile": "${workspaceFolder}/.env",
        "cwd": "${workspaceFolder}"
      }
    ],
    "inputs": [
      {
        "type": "promptString",
        "id": "programPath",
        "description": "Enter the relative path to the JavaScript file you want to debug (e.g., index.js or commands/yourfile.js)"
      }
    ]
  }